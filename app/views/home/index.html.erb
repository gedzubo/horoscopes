<div>
  <h1 class="font-bold text-4xl">Pick your sign:</h1>
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4 py-2">
    <% @signs.each do |sign| %>
      <div class="bg-white p-4 rounded-lg shadow-md content-center">
        <h2 class="font-bold text-2xl"><%= sign.name %></h2>
        <%= link_to "Show me my horoscope", sign, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium mt-4" %>
      </div>
    <% end %>
  </div>
</div>
