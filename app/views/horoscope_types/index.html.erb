<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Horoscope types" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Horoscope types</h1>
    <%= link_to "New horoscope type", new_horoscope_type_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="horoscope_types" class="min-w-full">
    <% @horoscope_types.each do |horoscope_type| %>
      <%= render horoscope_type %>
      <p>
        <%= link_to "Show this horoscope type", horoscope_type, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
